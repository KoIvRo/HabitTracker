<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HabitTracker.Views.CalendarPage"
             Title="Календарь">

    <VerticalStackLayout Spacing="20" Padding="20">

        <Label Text="Календарь привычек" 
               FontSize="32" 
               FontAttributes="Bold"
               HorizontalOptions="Center"/>

        <Label Text="Здесь будет отображаться календарь с вашими привычками"
               FontSize="16"
               HorizontalOptions="Center"
               TextColor="Gray"/>

        <Button Text="⬅ Вернуться на главную" 
                Clicked="OnBackButtonClicked"
                BackgroundColor="#2196F3"
                TextColor="White"
                FontSize="16"
                HeightRequest="50"
                CornerRadius="10"/>

    </VerticalStackLayout>
</ContentPage>