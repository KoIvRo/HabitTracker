<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HabitTracker.Views.BaseHabitsPage"
             Title="Habits"
             BackgroundColor="#121212">

    <ScrollView>
        <StackLayout Padding="15" Spacing="15">

            <!-- Header -->
            <HorizontalStackLayout>
                <Label Text="Habits" 
                       FontSize="24" 
                       FontAttributes="Bold"
                       TextColor="#4CAF50"
                       HorizontalOptions="StartAndExpand"/>
            </HorizontalStackLayout>

            <!-- Habits list -->
            <Border Stroke="#333333"
                    StrokeThickness="1"
                    BackgroundColor="#1E1E1E"
                    Padding="15">
                <StackLayout Spacing="12">
                    <HorizontalStackLayout>
                        <Label Text="Basic Habits" 
                               FontSize="18" 
                               FontAttributes="Bold"
                               TextColor="White"
                               HorizontalOptions="StartAndExpand"/>

                        <Button x:Name="AddHabitBtn"
                                Text="Add"
                                Clicked="OnAddHabitClicked"
                                BackgroundColor="#4CAF50"
                                TextColor="White"
                                FontSize="14"
                                HeightRequest="35"
                                CornerRadius="8"/>
                    </HorizontalStackLayout>

                    <!-- Habits list -->
                    <StackLayout x:Name="HabitsContainer"
                                 Spacing="8"/>
                </StackLayout>
            </Border>

        </StackLayout>
    </ScrollView>
</ContentPage>