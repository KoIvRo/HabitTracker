<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HabitTracker.Views.MainPage"
             Title="Today"
             BackgroundColor="#121212">

    <ScrollView>
        <StackLayout Padding="15" Spacing="15">

            <Border Stroke="#333333"
                    StrokeThickness="1"
                    BackgroundColor="#1E1E1E"
                    Padding="15">
                <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                    <Button Text="◀" 
                            x:Name="PrevDayBtn"
                            WidthRequest="40"
                            HeightRequest="40"
                            CornerRadius="20"
                            BackgroundColor="#BB86FC"
                            TextColor="White"/>

                    <Label x:Name="DateLabel"
                           Text="01.01.2024"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="White"
                           VerticalOptions="Center"
                           WidthRequest="150"
                           HorizontalTextAlignment="Center"/>

                    <Button Text="▶" 
                            x:Name="NextDayBtn"
                            WidthRequest="40"
                            HeightRequest="40"
                            CornerRadius="20"
                            BackgroundColor="#BB86FC"
                            TextColor="White"/>
                </HorizontalStackLayout>
            </Border>

            <Border Stroke="#333333"
                    StrokeThickness="1"
                    BackgroundColor="#1E1E1E"
                    Padding="15">
                <StackLayout Spacing="10">
                    <Label Text="Daily Mood" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center"/>

                    <Label x:Name="MoodDescriptionLabel"
                           Text="Neutral"
                           FontSize="16"
                           TextColor="#BBBBBB"
                           HorizontalOptions="Center"/>

                    <HorizontalStackLayout HorizontalOptions="Center" Spacing="8">
                        <Button x:Name="MoodBtn1"
                                Text="1"
                                WidthRequest="42"
                                HeightRequest="42"
                                CornerRadius="21"
                                FontSize="14"/>

                        <Button x:Name="MoodBtn2"
                                Text="2"
                                WidthRequest="42"
                                HeightRequest="42"
                                CornerRadius="21"
                                FontSize="14"/>

                        <Button x:Name="MoodBtn3"
                                Text="3"
                                WidthRequest="42"
                                HeightRequest="42"
                                CornerRadius="21"
                                FontSize="14"/>

                        <Button x:Name="MoodBtn4"
                                Text="4"
                                WidthRequest="42"
                                HeightRequest="42"
                                CornerRadius="21"
                                FontSize="14"/>

                        <Button x:Name="MoodBtn5"
                                Text="5"
                                WidthRequest="42"
                                HeightRequest="42"
                                CornerRadius="21"
                                FontSize="14"/>

                        <Button x:Name="MoodBtn6"
                                Text="6"
                                WidthRequest="42"
                                HeightRequest="42"
                                CornerRadius="21"
                                FontSize="14"/>

                        <Button x:Name="MoodBtn7"
                                Text="7"
                                WidthRequest="42"
                                HeightRequest="42"
                                CornerRadius="21"
                                FontSize="14"/>
                    </HorizontalStackLayout>
                </StackLayout>
            </Border>

            <Border Stroke="#333333"
                    StrokeThickness="1"
                    BackgroundColor="#1E1E1E"
                    Padding="15">
                <StackLayout Spacing="12">
                    <HorizontalStackLayout>
                        <Label Text="Notes" 
                               FontSize="18" 
                               FontAttributes="Bold"
                               TextColor="White"
                               HorizontalOptions="StartAndExpand"/>

                        <Button x:Name="AddHabitBtn"
                                Text="Add"
                                BackgroundColor="#BB86FC"
                                TextColor="White"
                                FontSize="14"
                                HeightRequest="35"
                                CornerRadius="8"/>
                    </HorizontalStackLayout>

                    <StackLayout x:Name="HabitsContainer"
                                 Spacing="8"/>
                </StackLayout>
            </Border>

        </StackLayout>
    </ScrollView>
</ContentPage>