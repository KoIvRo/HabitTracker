<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HabitTracker.Views.MainPage"
             Title="Трекер привычек">

    <StackLayout Padding="20" Spacing="20">

        <!-- Заголовок -->
        <Label Text="Трекер привычек" 
               FontSize="24" 
               FontAttributes="Bold"
               HorizontalOptions="Center"/>

        <!-- Дата -->
        <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
            <Button Text="◀" 
                    x:Name="PrevDayBtn"
                    WidthRequest="40"/>

            <Label x:Name="DateLabel"
                   Text="01.01.2024"
                   FontSize="16"
                   VerticalOptions="Center"
                   WidthRequest="150"
                   HorizontalTextAlignment="Center"/>

            <Button Text="▶" 
                    x:Name="NextDayBtn"
                    WidthRequest="40"/>
        </HorizontalStackLayout>

        <!-- Настроение -->
        <StackLayout Spacing="10">
            <Label Text="Настроение дня" 
                   FontSize="18" 
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

            <Label x:Name="MoodDescriptionLabel"
                   Text="Нейтрально"
                   FontSize="16"
                   HorizontalOptions="Center"/>

            <!-- 7 кнопок настроения ВНУТРИ Border -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="5">

                <Border x:Name="MoodBorder1" 
                       Stroke="Transparent" 
                       StrokeThickness="0"
                       Padding="0"
                       StrokeShape="RoundRectangle 20">
                    <Button x:Name="MoodBtn1"
                            Text="1"
                            WidthRequest="40"
                            HeightRequest="40"/>
                </Border>

                <Border x:Name="MoodBorder2" 
                       Stroke="Transparent" 
                       StrokeThickness="0"
                       Padding="0"
                       StrokeShape="RoundRectangle 20">
                    <Button x:Name="MoodBtn2"
                            Text="2"
                            WidthRequest="40"
                            HeightRequest="40"/>
                </Border>

                <Border x:Name="MoodBorder3" 
                       Stroke="Transparent" 
                       StrokeThickness="0"
                       Padding="0"
                       StrokeShape="RoundRectangle 20">
                    <Button x:Name="MoodBtn3"
                            Text="3"
                            WidthRequest="40"
                            HeightRequest="40"/>
                </Border>

                <Border x:Name="MoodBorder4" 
                       Stroke="Transparent" 
                       StrokeThickness="0"
                       Padding="0"
                       StrokeShape="RoundRectangle 20">
                    <Button x:Name="MoodBtn4"
                            Text="4"
                            WidthRequest="40"
                            HeightRequest="40"/>
                </Border>

                <Border x:Name="MoodBorder5" 
                       Stroke="Transparent" 
                       StrokeThickness="0"
                       Padding="0"
                       StrokeShape="RoundRectangle 20">
                    <Button x:Name="MoodBtn5"
                            Text="5"
                            WidthRequest="40"
                            HeightRequest="40"/>
                </Border>

                <Border x:Name="MoodBorder6" 
                       Stroke="Transparent" 
                       StrokeThickness="0"
                       Padding="0"
                       StrokeShape="RoundRectangle 20">
                    <Button x:Name="MoodBtn6"
                            Text="6"
                            WidthRequest="40"
                            HeightRequest="40"/>
                </Border>

                <Border x:Name="MoodBorder7" 
                       Stroke="Transparent" 
                       StrokeThickness="0"
                       Padding="0"
                       StrokeShape="RoundRectangle 20">
                    <Button x:Name="MoodBtn7"
                            Text="7"
                            WidthRequest="40"
                            HeightRequest="40"/>
                </Border>

            </HorizontalStackLayout>

            <!-- Подписи -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="30">
                <Label Text="Плохо" FontSize="12"/>
                <Label Text="Нейтрально" FontSize="12"/>
                <Label Text="Отлично" FontSize="12"/>
            </HorizontalStackLayout>
        </StackLayout>

        <!-- Привычки -->
        <StackLayout Spacing="10">
            <Label Text="Привычки" 
                   FontSize="18" 
                   FontAttributes="Bold"/>

            <Button x:Name="AddHabitBtn"
                    Text="+ Добавить привычку"
                    HorizontalOptions="Center"/>

            <!-- Список привычек -->
            <StackLayout x:Name="HabitsContainer"
                         Spacing="5"/>
        </StackLayout>

        <!-- Кнопки -->
        <Button x:Name="CalendarBtn"
                Text="Календарь" 
                HorizontalOptions="Center"/>

    </StackLayout>
</ContentPage>