<?xml version="1.0" encoding="UTF-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       x:Class="HabitTracker.AppShell"
       Title="HabitTracker">

    <!-- ОБРАТИТЕ ВНИМАНИЕ: здесь НЕ указывается namespace Views -->
    <!-- Shell автоматически ищет MainPage в корне, а он теперь в Views -->
    <!-- Поэтому мы используем альтернативный подход -->

    <ShellContent Title="Главная"
                  Route="MainPage">
        <ShellContent.ContentTemplate>
            <DataTemplate>
                <views:MainPage xmlns:views="clr-namespace:HabitTracker.Views" />
            </DataTemplate>
        </ShellContent.ContentTemplate>
    </ShellContent>

</Shell>